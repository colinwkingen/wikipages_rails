<h1>New Type</h1>

<%= form_for @type do |f| %>
  <%= f.label :category %>
  <%= f.text_field :category %>
  <%= f.submit  %>
<% end %>

<% if @type.errors.any? %>
  <h3>There were some errors, try again.</h3>
  <ul>
    <% @type.errors.full_message.each do |message| %>
      <li> <%= message %> </li>
    <% end %>
  </ul>
<% end %>
